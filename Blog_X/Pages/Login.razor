@page "/"
@inject IAuthInteface auth
@inject ILocalStorageService localStorage
@inject NavigationManager navigation
<div class="row main">

    <div class="col-7">
        <p>hello login</p>
        <EditForm Model="newLogin" OnValidSubmit="LoginUser">
            <div class="form-group p-2">
                    <label for="name">email</label>
                    <InputText type="email" class="form-control p-2" id="email" @bind-Value="@newLogin.Email" aria-describedby="name" />
                    <ValidationMessage For="@(()=>newLogin.Email)" />
            </div>
            <div class="form-group p-2">
                    <label for="name">Password</label>
                    <InputText type="Password" class="form-control p-2" id="email" @bind-Value="@newLogin.Password" aria-describedby="password" />
                    <ValidationMessage For="@(()=>newLogin.Password)" />
            </div>

            <div class="flex-row m-2" p-2>
                    <button type="submit" style="width:100px" class=" p-2 m-1 btn btn-primary">Submit</button>
            </div>
            <div class="row">
            <p class="col-5"> create account
                <a class="col-1 reg" href="register">Register</a></p>
            </div>

        </EditForm>
    </div>
    <div class="col-5 banner">
        <img style="height: 100%; width: 100%;" src="https://images.pexels.com/photos/839443/pexels-photo-839443.jpeg?auto=compress&cs=tinysrgb&w=600" alt="https://media.istockphoto.com/id/1252684502/photo/professional-blogger-working-on-his-new-post-for-social-media-at-home-closeup-creative.jpg?b=1&s=612x612&w=0&k=20&c=Wf2xfJbZXVhNepslbcOLQ_DGzPWlr9i3ae3W1Mn2J1M=">   
    </div>
</div>

@code{
    private LoginDto newLogin = new LoginDto();

    private async Task LoginUser(){
        var res = await auth.Login(newLogin);
        if(!string.IsNullOrWhiteSpace(res.Token)){
             localStorage.SetItemAsStringAsync("Token", res.Token);
        }
        navigation.NavigateTo("/home");
        newLogin.Email = "";
        newLogin.Password = "";
    }

}